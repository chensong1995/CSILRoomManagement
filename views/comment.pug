doctype html
html(lang="en")
  head
    include includes/header.html
  body
    div(id="wrapper")
      include includes/navbar.pug
      
      div(id="page-wrapper")
        div(class="container-fluid")
          div(class="row")
            div(class="col-lg-12")
              h1(class="page-header") Feedback
          div(class="row")
            div(class="col-lg-12")
              ol(class="breadcrumb")
                li(class="active")
                  i(class="fa fa-user")
                  |  Send feedback, report violation


          div(class="info-wrapper")
            div(class="row")
              div(class="col-xl-1 col-md-4 col-xs-6")
                dl(class="form-group")
                  dt
                    label(for="message") Message
                  dd
                    textarea(id="message" class="form-control" col="40" name="message" placeholder="Send feedback, report violation" rows="10" maxlength="1000") #{message}
            input(id="csrfToken" type="hidden" name="_csrf" value=csrfToken)
            p(class="text-danger" id="prompt")
            div(class="row")
              div(class="col-xl-1 col-md-2 col-xs-4")
                input(id="submit" type="submit" class="btn btn-primary" value="Send")

          

    include includes/scripts.html
    script(src="/js/comment.js")


